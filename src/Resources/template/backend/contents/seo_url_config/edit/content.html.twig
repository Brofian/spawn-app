{% block content_inner %}

    {% include 'backend/contents/misc/headline.html.twig' with {
        title: 'URL Konfiguration',
        previous: seo_url('system.backend.seo_url_config', 'seoUrlOverviewAction')
    } only %}


    {% set currentConfig = seo_url.seo_url %}

    <div class="container">

        <form
            method="post"
            action="{{ seo_url('system.backend.seo_url_config', 'seoUrlEditSubmitAction', [seo_url.controller, seo_url.method]) }}"
            data-ajax-form
        >
            {% block base_configuration %}
                <div class="section">

                    <div class="col-1">SEO URL</div>

                    <div class="col-10-7">
                        <input type="text" name="cUrl" value="{{ currentConfig.cUrl }}" required/>
                    </div>


                    <div class="col-10"></div>


                    {% block base_configuration_active_switch %}
                        <div class="col-10-2">

                            <span class="col-3 align-self-center">Aktiv</span>

                            <span class="col-3-2 align-self-center">
                                <input type="checkbox" id="cb-active" name="active" {% if currentConfig.active %}checked="checked"{% endif %}>
                                <label for="cb-active"></label>
                            </span>
                        </div>
                    {% endblock %}

                </div>
            {% endblock %}


            {% block form_submit_button %}

                <div class="spacer-m"></div>

                <div class="col-1">
                    <button type="submit">Speichern</button>
                </div>
            {% endblock %}


        </form>

    </div>

{% endblock %}
